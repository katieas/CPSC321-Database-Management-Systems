<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="/public/styles.css">
</head>

<body>
    <div class="nav">
        <a href="/">Home</a>
        <a href="/songList">Song List</a>
        <a href="/profiles">Profiles</a>
        <a href="/viewPerformance">View Performances</a>
    </div>

    <h3>Click on player to get Statistics!</h3>

    <table id="profileTable">
        <tr>
            <th>Player ID</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
        <% Profiles.forEach(function(profile) { %>
        <tr onclick="location.href='/profileStats/<%=profile.player_id%>'">
            <td><%= profile.player_id %></td>
            <td><%= profile.first_name %></td>
            <td><%= profile.last_name %></td>
        </tr>
        <% }) %>
    </table>
</body>
</html>